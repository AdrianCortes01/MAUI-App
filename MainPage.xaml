<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrition_Assistant.MainPage"
             Loaded="OnPageLoaded">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
        <Label Text="Login" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Entry x:Name="txtUsername" Placeholder="Username" />
        <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" BackgroundColor="Blue" TextColor="White" CornerRadius="10"/>
    </VerticalStackLayout>

</ContentPage>
